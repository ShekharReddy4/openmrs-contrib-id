extends ../../layouts/base.pug

block defines
  - title = 'OpenMRS ID - Your Profile';
  - name = 'profile';
  - sidebar = []
  - showNavbar = true;
  - showSidebar = true;

append head
  link(rel='stylesheet', href='/resource/stylesheets/profile/profile.css')


block content
  if (!user.extra || !user.extra.__welcomed)
    .col-md-12.welcome-message#welcome-message
      .col-md-5
        h2 Welcome to the OpenMRS Community!
        p We're so glad you've joined us. Here are some easy ways to get started and let others know who you are.
      .col-md-7
        ol
          li <a href="https://talk.openmrs.org/#{user.username}/preferences">Edit your profile</a> on <a href="https://talk.openmrs.org">OpenMRS Talk</a> to tell us about yourself and add an photo.
          li <a href="https://talk.openmrs.org/t/welcome-please-introduce-yourself/32/">Introduce yourself</a> to the community.
        .row-item
          input#done.btn.btn-success(type='submit', value="Thanks, I've done these")
        .row-item
          input#later.btn.btn-success(type='submit', value='Remind me later')

  .col-md-6.left
    include edit-basic-details

  .col-md-6.right
    include edit-email
