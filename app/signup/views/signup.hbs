{{#extend "title"}}Sign Up – OpenMRS ID{{/extend}}
{{#extend "headline"}}Get an OpenMRS ID{{/extend}}

{{#extend "body_append"}}
<script type="text/javascript" src="https://www.google.com/recaptcha/api/challenge?k=6LfYosYSAAAAAFPN9lxWhU8S4FL1U_RjkaSqtgeV"></script>
{{/extend}}

{{#extend "sidebar"}}
    {{{sidebarItem "what_is_openmrs_id"}}}
    {{{sidebarItem "forgot_password"}}}
{{/extend}}

<form action="/signup" method="post" autocomplete="off">
    <p>Already have an ID? <a href="/login">Log in now</a> to access your account settings.</p>

    <div class="field {{check "class" fail.username}}">
        <label>Username</label>
        {{#n}}<input type="text" name="username"
            placeholder="Username"
            {{check "value" vals.username}}
        >{{/n}}
        <span class="description">
            {{#explanation fail.username}}
                Please enter a valid username.
            {{/explanation}}
            Your username can only contain letters and numbers (0-9, A-Z, a-z).
        </span>
    </div>

    <div class="field two-up {{check "class" fail.firstname}}{{check "class" fail.lastname}}">
        <label>Name</label>
        {{#n}}<input type="text" name="firstname" placeholder="Given Name"
            {{check "value" vals.firstname}}
        >{{/n}}
        {{#n}}<input type="text" name="lastname" placeholder="Surname" 
            {{check "value" vals.lastname}}
        >{{/n}}
        <span class="description">
            {{#explanation fail.firstname fail.lastname}}
            Both a given name and surname are required.
            {{/explanation}}
            Your name identifies you across the OpenMRS Community.
        </span>
    </div>

    <div class="field {{check "class" fail.emails}}">
        <label>Email</label>
        {{#n}}<input type="text" name="emails"
            placeholder="Email Address"
            {{check "value" vals.emails}}
        >{{/n}}
        <span class="description">
            {{#explanation fail.emails}}
                Please enter a valid email address.
            {{/explanation}}
            We'll send any notifications to this address. You'll always be able to control what mail you receive.
        </span>
    </div>

    <div class="field {{check "class" fail.password}}">
        <label>Password</label>
        <input type="password" name="password" placeholder="Password" {{!no value intentionally}}>
        <span class="description">
            {{#explanation fail.password}}
                Please enter a valid password.
            {{/explanation}}
            Passwords must be at least 8 characters long.
        </span>
    </div>

    <div class="field {{check "class" fail.recaptcha_response_field}}" id="recaptcha_widget">
        <label>Captcha</label>
        <input type="text" id="recaptcha_response_field" name="recaptcha_response_field" placeholder="Are you human?">
        <span class="description">
            {{#explanation fail.fail.recaptcha_response_field}}
                Incorrect, please try again.
            {{/explanation}}
            <span class="recaptcha_only_if_image">Enter the words below:</span>
            <span class="recaptcha_only_if_audio">Enter the numbers you hear:</span>
            <div id="captcha-options">(
                <a href="javascript:Recaptcha.reload()">new captcha</a>
                <a href="javascript:Recaptcha.switch_type('audio')" class="recaptcha_only_if_image">switch to audio captcha</a>
                <a href="javascript:Recaptcha.switch_type('image')" class="recaptcha_only_if_audio">switch to image captcha</a>
                <a href="javascript:Recaptcha.showhelp()">help</a>
            )</div>
            <div id="recaptcha_image"></div>
            <span id="captcha-credit">Thanks, <a href="http://recaptcha.net/" target="_blank">reCAPTCHA!</a></span>
        </span>
    </div>

    <input type="submit" class="icon-ok" value="Join the Community &#187;" {{#if standalone}}formtarget="_blank"{{/if}}>
</form>